<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:name=".AndroidApplication"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KotlinPrac"
        tools:targetApi="31">
        <activity
            android:name=".pppActivity"
            android:exported="false"
            android:theme="@style/Theme.KotlinPrac" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.KotlinPrac"/>

        <activity
            android:name=".sample.features.login.ui.LoginActivity"
            android:theme="@style/Theme.KotlinPrac"
            android:label="Login Screen">
        </activity>

        <activity
            android:name=".sample.features.movies.ui.MoviesActivity"
            android:theme="@style/Theme.KotlinPrac"
            android:exported="false"
            android:label="Movies">
        </activity>
        <activity
            android:name=".sample.core.navigation.RouteActivity"
            android:exported="false"
            android:theme="@style/Theme.KotlinPrac">
        </activity>
        <activity
            android:name=".sample.features.movies.ui.MovieDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.KotlinPrac">
        </activity>
        <activity
            android:name=".barkMainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.KotlinPrac">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>