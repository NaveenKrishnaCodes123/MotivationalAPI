<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/parkingcar_48"
        android:layout_marginTop="4sp"
        android:layout_gravity="center"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4sp"
        android:layout_weight="1"
        android:padding="16sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/anpr_bg"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/camera"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:src="@drawable/camera" />
            <TextView
                android:id="@+id/btn_anpr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:padding="6sp"
                android:text="@string/anpr" />
        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2sp"
                android:paddingTop="8sp"
                android:text="@string/hook_number"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/hookNumber"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:focusableInTouchMode="true"
                android:inputType="number"
                android:textSize="10sp"
                android:padding="8sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2sp"
                android:paddingTop="8sp"
                android:text="IN TIME"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/intime"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:focusableInTouchMode="true"
                android:inputType="number"
                android:textSize="10sp"
                android:padding="8sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7sp"
                android:paddingTop="8sp"
                android:textSize="12sp"
                android:text="Vehicle Number"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_vehicle_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3sp"
                android:layout_marginBottom="16sp"
                android:background="@drawable/edit_text_bg"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true"
                android:textSize="10sp"
                android:padding="8sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7sp"
                android:paddingTop="8sp"
                android:text="Vehicle Type"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8sp"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- SUV Image Button with Label -->
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn_suv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="SUV"
                        android:scaleType="centerInside"
                        android:src="@drawable/car_repair" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4sp"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:text="SUV" />
                </LinearLayout>

                <!-- Luxury Image Button with Label -->
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn_luxury"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Luxury"
                        android:scaleType="centerInside"
                        android:src="@drawable/car_repair" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4sp"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:text="Luxury" />
                </LinearLayout>

                <!-- Sedan Image Button with Label -->
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn_sedan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Sedan"
                        android:scaleType="centerInside"
                        android:src="@drawable/car_repair" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4sp"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:text="Sedan" />
                </LinearLayout>

                <!-- Hatchback Image Button with Label -->
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn_hatchback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Hatchback"
                        android:scaleType="centerInside"
                        android:src="@drawable/car_repair" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4sp"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:text="Hatchback" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7sp"
                android:paddingTop="8sp"
                android:text="Valet Driver Name"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_valet_driver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3sp"
                android:layout_marginBottom="16sp"
                android:textSize="10sp"
                android:selectAllOnFocus="true"
                android:background="@drawable/edit_text_bg"
                android:inputType="textPersonName"
                android:padding="8sp" />

            <!-- Upload Photos -->
            <Button
                android:id="@+id/btn_upload_photos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/maroon"
                android:text="+ Photos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7sp"
                android:paddingTop="8sp"
                android:text="Parking Lot"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_parkinglot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3sp"
                android:layout_marginBottom="16sp"
                android:background="@drawable/edit_text_bg"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true"
                android:textSize="10sp"
                android:padding="8sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7sp"
                android:paddingTop="8sp"
                android:text="Notes"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3sp"
                android:layout_marginBottom="8sp"
                android:background="@drawable/edit_text_bg"
                android:selectAllOnFocus="true"
                android:inputType="textMultiLine"
                android:textSize="10sp"
                android:padding="8sp"/>

            <CheckBox
                android:id="@+id/cb_senior_citizen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8sp"
                android:text="Senior Citizen (25% Discount)" />

            <Switch
                android:id="@+id/switch_parking_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16sp"
                android:text="Is Vehicle Parked?" />
        </LinearLayout>


    </ScrollView>

    <!-- Fixed Submit Button -->
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:layout_marginBottom="40sp"
        android:backgroundTint="@color/maroon" />

</LinearLayout>
